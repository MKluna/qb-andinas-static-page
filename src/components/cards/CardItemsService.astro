---
const { url, alt, text } = Astro.props;
---

<div class={`flex flex-col items-center animate-on-scroll-section`}>
    <img
        class="icon-size mb-8"
        src={url}
        alt={alt}
        loading="eager"
        width={130}
        height={130}
    />
    <div class="text-center glasseffect">
        {
            text.map((itm) => (
                <p class="text-gray-500 dark:text-gray-400">{itm}</p>
            ))
        }
    </div>
</div>

<style>
    .icon-size {
        width: 130px;
        height: 130px;
    }
    .fixed-size {
        width: 100%;
        max-width: 300px;
        height: 300px;
    }
    .card-items {
        padding: 5px;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 250px; /* Aumenté el ancho a 250px */
        height: 334px; /* Aumenté la altura a 334px */
        background: rgb(255, 255, 255);
        border-radius: 1rem;
        box-shadow:
            rgba(50, 50, 93, 0.25) 0px -6px 12px -2px,
            rgba(50, 50, 93, 0.25) 0px 6px 12px -2px,
            rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
        transition: all ease-in-out 0.3s;
    }

    .card-items:hover {
        background-color: #fdfdfd;
        box-shadow:
            rgba(0, 0, 0, 0.09) 0px -2px 1px,
            rgba(0, 0, 0, 0.09) 0px 2px 1px,
            rgba(0, 0, 0, 0.09) 0px 4px 2px,
            rgba(0, 0, 0, 0.09) 0px 8px 4px,
            rgba(0, 0, 0, 0.09) 0px 16px 8px,
            rgba(0, 0, 0, 0.09) 0px 32px 16px;
    }

    .glasseffect {
        background: rgb(255, 255, 255);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        width: 250px;
        height: 334px;
        padding: 5px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
