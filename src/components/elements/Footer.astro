---
import { Image } from "astro:assets";
import { FOOTER_IMG } from "../../mock/public-img";
import { REDES_SOCIALES } from "../../mock/public-txt";
---

<footer
    class="relative bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 pt-2 rounded-t-3xl"
>
    <div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-2">
        <div class="md:flex md:justify-between text-center">
            <div
                class="flex flex-col md:flex-row items-center md:items-start gap-4 text-heading-3 mb-12 md:mb-0 lg:mb-0"
            >
                <div
                    class="flex flex-row md:flex-col items-center md:items-start gap-4 text-heading-3 md:ml-12"
                    id="certificaciones"
                >
                    <a
                        href={REDES_SOCIALES.FACEBOOK}
                        class="transition hover:text-heading-1 hover:scale-110"
                        aria-label="Facebook"
                    >
                        <i class="fi fi-brands-facebook text-4xl"></i>
                    </a>
                    <a
                        href={REDES_SOCIALES.LINKEDIN}
                        class="transition hover:text-heading-1 hover:scale-110"
                        aria-label="LinkedIn"
                    >
                        <i class="fi fi-brands-linkedin text-4xl"></i>
                    </a>
                    <a
                        href={REDES_SOCIALES.INSTAGRAM}
                        class="transition hover:text-heading-1 hover:scale-110"
                        aria-label="Instagram"
                    >
                        <i class="fi fi-brands-instagram text-4xl"></i>
                    </a>
                    <a
                        href={REDES_SOCIALES.WHATSAPP}
                        class="transition hover:text-heading-1 hover:scale-110"
                        aria-label="WhatsApp"
                    >
                        <i class="fi fi-brands-whatsapp text-4xl"></i>
                    </a>
                </div>
            </div>
            <div class="text-left md:text-left mb-12 md:mb-0 lg:mb-0">
                <div id="somospartesde">
                    <h2
                        class="block antialiased text-center tracking-normal font-sans text-xl font-semibold leading-snug text-inherit mb-2 !font-semibold !text-primary"
                    >
                        Somos parte de
                    </h2>
                    <ul class="flex justify-center items-center gap-4">
                        <li>
                            <Image
                                src={FOOTER_IMG[0].url}
                                alt="footer-icon"
                                width="120"
                                height="120"
                                loading="eager"
                            />
                        </li>
                        <li>
                            <Image
                                src={FOOTER_IMG[1].url}
                                alt="footer-icon"
                                width="180"
                                height="180"
                                class="lg:mb-5"
                                loading="eager"
                            />
                        </li>
                    </ul>
                </div>
            </div>
            <div class="text-center md:text-left mb-12 md:mb-0 lg:mb-0">
                <div id="certific">
                    <h2
                        class="block antialiased text-center tracking-normal font-sans text-xl font-semibold leading-snug text-inherit mb-2 !font-semibold !text-primary"
                    >
                        Certificaciones
                    </h2>
                    <ul class="flex justify-center items-center gap-4">
                        <li>
                            <Image
                                src="https://www.oca.com.ar/Content/images/logosfooter/certificaciones.png"
                                width="180"
                                height="180"
                                alt="footer-icon"
                                loading="eager"
                            />
                        </li>
                    </ul>
                </div>
            </div>
            <div class="mb-12 md:mb-0 lg:mb-0">
                <div id="casacentral">
                    <h2
                        class="block antialiased text-center tracking-normal font-sans text-xl font-semibold leading-snug text-inherit mb-2 !font-semibold !text-primary"
                    >
                        Casa Central
                    </h2>
                    <p class="text-gray-500 dark:text-gray-400">
                        Tronador 873 CABA<br />
                        Tel. 4551-0020
                    </p>
                </div>
            </div>
        </div>
        <div class="sm:flex sm:items-center sm:justify-between mt-4">
            <div
                class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
            >
                &copy; <span id="year"></span> Q.B. Andina. Todos los derechos reservados
            </div>
        </div>
        <div
            class="flex flex-col lg:flex-row items-center space-y-4 lg:space-y-0 lg:space-x-4"
        >
            <a
                href="#"
                class="text-sm text-blue-500 hover:underline cursor-pointer"
            >
                Dirección General de Defensa y Protección al Consumidor
            </a>
            <a
                href="#!/politica-de-privacidad"
                class="text-sm text-blue-500 hover:underline cursor-pointer"
            >
                Política de privacidad
            </a>
            <a
                href="#"
                class="text-sm text-blue-500 hover:underline cursor-pointer"
            >
                Enacom
            </a>
            <a
                href="#"
                class="text-sm text-blue-500 hover:underline cursor-pointer"
            >
                Defensa de las y los Consumidores. Para reclamos <u
                    >ingrese aquí</u
                >
            </a>
        </div>
    </div>
</footer>

<script>
    document.addEventListener("astro:page-load", () => {
        const yearSpan = document.getElementById("year");
        const currentYear = new Date().getFullYear().toString();
        if (yearSpan) {
            yearSpan.textContent = currentYear;
        }
    });
</script>
