---
import { Image } from "astro:assets";
import { SERVICES_IMG } from "../../../mock/public-img";
import { FEATURES_TXT, SERVICES_TXT } from "../../../mock/public-txt";
import Container from "../../shared/Container.astro";
import Title from "../../shared/Title.astro";
---

<section id="services">
    <Container>
        <div class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl">
            <div class="absolute right-0 top-0 h-full w-full flex justify-end">
                <div
                    class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl"
                >
                    <span
                        class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
                    ></span>
                </div>
            </div>

            <div class="relative pt-20 lg:pt-20">
                <div class="relative mb-2">
                    <div class="text-center max-w-3xl mx-auto mb-12">
                        <Title>Nuestros Servicios</Title>
                    </div>
                    <div
                        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-12"
                    >
                        {
                            [
                                {
                                    url: SERVICES_IMG.LOGISTICA_URL,
                                    alt: SERVICES_IMG.LOGISTICA_ALT,
                                    text: [
                                        SERVICES_TXT.LOGISTICA_TXT.ITM1_1,
                                        SERVICES_TXT.LOGISTICA_TXT.ITM1_2,
                                    ],
                                },
                                {
                                    url: SERVICES_IMG.LUZ_URL,
                                    alt: SERVICES_IMG.LUZ_ALT,
                                    text: [
                                        SERVICES_TXT.LUZ_TXT.ITM2_1,
                                        SERVICES_TXT.LUZ_TXT.ITM2_3,
                                    ],
                                },
                                {
                                    url: SERVICES_IMG.GAS_URL,
                                    alt: SERVICES_IMG.GAS_ALT,
                                    text: [
                                        SERVICES_TXT.GAS_TXT.ITM3_1,
                                        SERVICES_TXT.GAS_TXT.ITM3_2,
                                        SERVICES_TXT.GAS_TXT.ITM3_3,
                                    ],
                                },
                                {
                                    url: SERVICES_IMG.AGUA_URL,
                                    alt: SERVICES_IMG.AGUA_ALT,
                                    text: [SERVICES_TXT.AGUA_TXT],
                                },
                            ].map((service, index) => (
                                <div class="flex flex-col items-center">
                                    <img
                                        class="icon-size mb-8"
                                        src={service.url}
                                        alt={service.alt}
                                        loading="eager"
                                        width={130}
                                        height={130}
                                    />
                                    <div class="relative py-4 md:py-6 px-4 md:px-6 card-items text-center flex justify-center items-center w-full md:w-1/2 lg:w-1/3 mx-auto">
                                        <ul class="text-lg md:text-sm lg:text-base text-gray-900 dark:text-white">
                                            {service.text.map((itm) => (
                                                <li>{itm}</li>
                                            ))}
                                        </ul>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl">
            <div class="relative">
                <div class="relative mb-10">
                    <div class="text-center max-w-3xl mx-auto mb-12">
                        <Title>Venta de insumos</Title>
                    </div>
                    <div
                        class="flex flex-col lg:flex-row gap-10 lg:gap-12 bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 p-6 lg:p-12 rounded-lg mt-6"
                    >
                        <div class="lg:w-1/2 flex items-center justify-center">
                            <div
                                class="flex flex-col items-center lg:max-w-3xl mx-auto lg:flex-1 lg:h-full justify-center"
                            >
                                <h2
                                    class="text-lg lg:text-xl text-gray-900 dark:text-white text-center mb-4"
                                >
                                    {FEATURES_TXT.TITLE}
                                </h2>
                                <ul
                                    class="max-w-md space-y-1 text-gray-500 list-inside dark:text-gray-400"
                                >
                                    {
                                        FEATURES_TXT.ITEMS.map((itm) => (
                                            <li class="flex items-center text-lg lg:text-xl text-gray-900 dark:text-white">
                                                <svg
                                                    class="w-3.5 h-3.5 me-2 text-green-500 dark:text-green-400 flex-shrink-0"
                                                    aria-hidden="true"
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    fill="currentColor"
                                                    viewBox="0 0 20 20"
                                                >
                                                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z" />
                                                </svg>
                                                {itm}
                                            </li>
                                        ))
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="lg:w-1/2 flex items-center">
                            <Image
                                src={SERVICES_IMG.SERVICES_IMG_1}
                                alt={SERVICES_IMG.ALT_SERVICES_IMG_1}
                                width={800}
                                height={450}
                                class="object-cover rounded-lg mx-auto lg:max-w-none lg:ml-auto lg:mr-0 sm:w-3/4 sm:mx-auto"
                                loading="eager"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Container>
</section>

<style>
    .icon-size {
        width: 130px;
        height: 130px;
    }
    .fixed-size {
        width: 100%;
        max-width: 300px;
        height: 300px;
    }

    .card-items {
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 190px;
        height: 254px;
        background: rgb(255, 255, 255);
        border-radius: 1rem;
        box-shadow:
            rgba(50, 50, 93, 0.25) 0px -6px 12px -2px,
            rgba(50, 50, 93, 0.25) 0px 6px
                12px -2px,
            rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
        transition: all ease-in-out 0.3s;
    }

    .card-items:hover {
        background-color: #fdfdfd;
        box-shadow:
            rgba(0, 0, 0, 0.09) 0px -2px 1px,
            rgba(0, 0, 0, 0.09) 0px 2px 1px,
            rgba(0, 0, 0, 0.09) 0px 4px 2px,
            rgba(0, 0, 0, 0.09) 0px 8px 4px,
            rgba(0, 0, 0, 0.09) 0px 16px 8px,
            rgba(0, 0, 0, 0.09) 0px 32px 16px;
    }
</style>
