---
import { MockProjectDB } from "../../utils/database/Project-Mock-DB";
import Container from "../shared/Container.astro";
import ProjectCard from "../shared/ProjectCard.astro";
import Title from "../shared/Title.astro";
---
<!-- pt-32 lg:pt-36 -->
<section id="projects" class="relative px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default max-w-7xl mx-auto">
    <div class="text-center max-w-3xl mx-auto">
        <Title>{MockProjectDB.title</Title>
    </div>
    <Container className="flex flex-col midmd:flex-row gap-10 lg:gap-12">
        <div class="grid gap-10 mt-10 lg:gap-10 md:grid-cols-2 xl:grid-cols-3">
            {MockProjectDB.projects.map((project) => <ProjectCard {...project} />)}
        </div>
    </Container>
</section>
