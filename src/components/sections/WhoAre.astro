---
import { MockWhoAreDB } from "../../utils/database/WhoAre-Mock-DB";
import Title from "../shared/Title.astro";
---

<!-- pt-32 lg:pt-36 -->
<section class="relative animate-fade-left animate-once animate-delay-[400ms] animate-ease-in animate-normal animate-fill-backwards" id="nuestra-info">
    <div
        class="relative px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default max-w-7xl mx-auto"
    >
        <div class="text-center max-w-3xl mx-auto">
            <Title>{MockWhoAreDB.title}</Title>
            <br>
        </div>

        <div
            class="mx-auto max-w-7xl p-4 md:px-8 md:flex md:flex-row-reverse md:gap-16"
        >
            <div class="md:basis-1/2 self-center">
                <div class="mb-12 text-lg dark:text-slate-400">
                    {MockWhoAreDB.principalText}
                </div>

                <div class="grid mx-auto gap-8 gap-y-4 md:gap-y-8">
                    {
                        MockWhoAreDB.services.map((service) => (
                            <div class="flex flex-row max-w-none">
                                <div class="flex justify-center">
                                    <div class="mr-2 rtl:mr-0 rtl:ml-2 flex h-7 w-7 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1">
                                        &checkmark;
                                    </div>
                                </div>
                                <div class="mt-0.5">
                                    <h3 class="text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2">
                                        {service.title}
                                    </h3>
                                    <p class="mt-3 text-muted dark:text-slate-400 ml-2 rtl:ml-0 rtl:mr-2">
                                        {service.description}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <div aria-hidden="true" class="mt-10 md:mt-0 md:basis-1/2">
                <div class="relative m-auto max-w-4xl">
                    <img
                        src="/qb-andinas-static-page/./img-who-are.jpg"
                        width="500"
                        height="500"
                        class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg"
                        alt="Colorful Image"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
