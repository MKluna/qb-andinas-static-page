---
import { SERVICES_IMG } from "../../mock/public-img";
import { MockFeatureDB } from "../../utils/database/Feature-Mock-DB";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
---

<section class="relative pt-18 lg:pt-18">
    <div class="text-center max-w-3xl mx-auto mb-24">
        <Title>{MockFeatureDB.title</Title>
    </div>
    <Container className="flex flex-col lg:flex-row gap-10 lg:gap-12 bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 p-12 rounded-lg">
        <div class="relative flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8 lg:items-start lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2">
            <Paragraph className="mt-8 text-sm">
                {MockFeatureDB.paragraph}
            </Paragraph>
        </div>

        <div class="flex flex-1 lg:w-1/2 lg:h-auto relative lg:max-w-none lg:mx-0 mx-auto max-w-3xl dark:text-white">
            <img
                src={SERVICES_IMG.SERVICES_IMG_1}
                alt={SERVICES_IMG.ALT_SERVICES_IMG_1}
                width="2350"
                height="2359"
                class="lg:w-full lg:h-full object-cover rounded-lg"
            />
        </div>
    </Container>
</section>

