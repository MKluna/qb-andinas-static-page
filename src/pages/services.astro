---
import HeroS from "../components/sections/services/HeroS.astro";
import Container from "../components/shared/Container.astro";
import Title from "../components/shared/Title.astro";
import Layout from "../layouts/Layout.astro";
import { MockServicesDescriptionDB } from "../utils/database/Jobs-Public-Links/Services-Description-DB";
---

<Layout title="Welcome to QB">
    <main class="flex flex-col gap-y-20 md:gap-y-32 overflow-hidden">
        <HeroS />
        {
            MockServicesDescriptionDB.items.map((item) => (
                <Container className="space-y-8">
                    <section class="relative bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 md:px-8">
                        <div class="relative px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default max-w-7xl mx-auto">
                            <div class="absolute right-0 top-0 h-full w-full flex justify-end">
                                <div class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl">
                                    <span class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45" />
                                    <span class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45" />
                                    <span class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45" />
                                </div>
                            </div>
                            <div class="text-center max-w-3xl mx-auto">
                                <Title>{item.title}</Title>
                                <br />
                                <br />
                            </div>

                            <div class="mx-auto max-w-7xl p-4 md:px-8 md:flex md:flex-row-reverse md:gap-16">
                                <div class="md:basis-1/2 self-center">
                                    <div class="grid mx-auto gap-8 gap-y-4 md:gap-y-8">
                                        <div class="flex flex-row max-w-none">
                                            <div class="flex justify-center">
                                                <div class="mr-2 rtl:mr-0 rtl:ml-2 flex h-7 w-7 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1">
                                                    &checkmark;
                                                </div>
                                            </div>
                                            <div class="mt-0.5">
                                                <p class="mt-3 text-muted dark:text-slate-400 ml-2 rtl:ml-0 rtl:mr-2">
                                                    {item.description}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div
                                    aria-hidden="true"
                                    class="mt-10 md:mt-0 md:basis-1/2"
                                >
                                    <div class="relative m-auto max-w-4xl">
                                        <img
                                            src={item.img}
                                            width="500"
                                            height="500"
                                            class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg"
                                            alt="Colorful Image"
                                            loading="lazy"
                                            decoding="async"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </Container>
            ))
        }
    </main>
</Layout>
