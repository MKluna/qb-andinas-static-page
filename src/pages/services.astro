---
import Features from "../components/sections/Features.astro";
import Container from "../components/shared/Container.astro";
import Title from "../components/shared/Title.astro";
import Layout from "../layouts/Layout.astro";
import { SERVICES_IMG } from "../mock/public-img";
---

<Layout title="Servicios">
    <main class="flex flex-col gap-y-20 md:gap-y-32 overflow-hidden">
        <Container className={"flex flex-col lg:flex-row gap-32 lg:gap-32"}>
            <div class="absolute right-0 top-0 h-full w-full flex justify-end">
                <div
                    class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl"
                >
                    <span
                        class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
                    ></span>
                </div>
            </div>
            <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
                <div
                    class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl"
                >
                    <span
                        class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
                    ></span>
                </div>
            </div>
            <section class="relative pt-32 lg:pt-36">
                <section
                    class="relative animate-fade-left animate-once animate-delay-[400ms] animate-ease-in animate-normal animate-fill-backwards mb-10"
                    id="nuestra-info"
                >
                    <div class="text-center max-w-3xl mx-auto mb-24">
                        <Title>Nuestros Servicios</Title>
                    </div>

                    <div
                        class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12"
                    >
                        <div class="rounded-full">
                            <img
                                class="h-auto max-w-full object-cover dark:flex md:mb-32 sm:mb-0"
                                src={SERVICES_IMG.LOGISTICA_URL}
                                alt={SERVICES_IMG.LOGISTICA_ALT}
                                loading="lazy"
                            />
                            <div
                                class="relative py-8 md:py-10 px-6 md:px-8 bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-700 md:text-left mt-4 text-center min-h-[300px] flex justify-center items-center"
                            >
                                <p
                                    class="text-xs md:text-sm lg:text-base text-gray-900 dark:text-white text-center mt-6"
                                >
                                    Distribución, Paquetería.
                                </p>
                            </div>
                        </div>
                        <div class="rounded-full">
                            <img
                                class="h-auto max-w-full object-cover dark:flex md:mb-32 sm:mb-0"
                                src={SERVICES_IMG.LUZ_URL}
                                alt={SERVICES_IMG.LUZ_ALT}
                                loading="lazy"
                            />
                            <div
                                class="relative py-8 md:py-10 px-6 md:px-8 bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-800 md:text-left mt-4 text-center min-h-[300px] flex justify-center items-center"
                            >
                                <p
                                    class="text-xs md:text-sm lg:text-base text-gray-900 dark:text-white text-center"
                                >
                                    Tendido de líneas de media y baja tensión,
                                    Planos de obras, Nuevos suministros.
                                </p>
                            </div>
                        </div>
                        <div class="rounded-full">
                            <img
                                class="h-auto max-w-full object-cover dark:flex md:mb-32 sm:mb-0"
                                src={SERVICES_IMG.GAS_URL}
                                alt={SERVICES_IMG.GAS_ALT}
                                loading="lazy"
                            />
                            <div
                                class="relative py-8 md:py-10 px-6 md:px-8 bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 md:text-left mt-4 text-center min-h-[300px] flex justify-center items-center"
                            >
                                <p
                                    class="text-xs md:text-sm lg:text-base text-gray-900 dark:text-white text-center mt-6"
                                >
                                    Planos de obra, nuevos suministros,
                                    morosidad.
                                </p>
                            </div>
                        </div>
                        <div class="rounded-full">
                            <img
                                class="h-auto max-w-full object-cover dark:flex md:mb-32 sm:mb-0"
                                src={SERVICES_IMG.AGUA_URL}
                                alt={SERVICES_IMG.AGUA_ALT}
                                loading="lazy"
                            />
                            <div
                                class="relative py-8 md:py-10 px-6 md:px-8 bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 md:text-left mt-4 text-center min-h-[300px] flex justify-center items-center"
                            >
                                <p
                                    class="text-xs md:text-sm lg:text-base text-gray-900 dark:text-white text-center mt-6"
                                >
                                    Lectura de medidores.
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
            </section>
        </Container>
        <Features />
    </main>
</Layout>
